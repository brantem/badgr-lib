{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "allowJs": false,
        "checkJs": false,
        "sourceMap": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "lib": ["esnext", "dom"],
        "declaration": true
    },
    "include": ["src"],
    "exclude": [
        "dist",
        ".git",
        "node_modules"
    ]
}
